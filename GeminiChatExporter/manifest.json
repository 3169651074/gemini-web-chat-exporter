{
  "manifest_version": 2,
  "name": "Gemini Chat Exporter",
  "version": "1.0.0",
  "description": "一键导出 Gemini 对话内容为 HTML 文件",
  "author": "GeminiChatExporter",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "permissions": [
    "activeTab",
    "downloads"
  ],

  "browser_action": {
    "default_icon": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },
    "default_title": "导出 Gemini 对话",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "gemini-chat-exporter@firefox.extension",
      "strict_min_version": "48.0",
      "data_collection_permissions": {
        "required": []
      }
    }
  }
}
